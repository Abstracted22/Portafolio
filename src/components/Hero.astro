---
/**
 * @file Hero.astro
 * @description Componente de la sección hero que sirve como presentación principal.
 * Incluye el nombre, título profesional, descripción y botones de llamada a la acción.
 * Diseñado para ser visualmente impactante y completamente responsivo.
 */
---

<!-- 
  Sección hero que ocupa toda la altura de la pantalla
  Contiene la presentación principal del portafolio
-->
<section id="home" class="hero">
  <!-- Contenedor principal para centrar el contenido -->
  <div class="container">
    <!-- Contenedor del contenido del hero -->
    <div class="hero-content">
      <!-- Título principal con el nombre -->
      <h1 class="hero-title">
        Edgar Rodriguez
      </h1>
      
      <!-- Subtítulo con el rol profesional -->
      <p class="hero-subtitle">
        Desarrollador Web
      </p>
      
      <!-- Descripción breve -->
      <p class="hero-description">
        Creo experiencias digitales modernas y minimalistas con tecnologías de vanguardia.
      </p>
      
      <!-- Contenedor para los botones de acción -->
      <div class="hero-actions">
        <!-- Botón primario para ver proyectos -->
        <a href="#projects" class="btn btn-primary">Ver Proyectos</a>
        <!-- Botón secundario para contacto -->
        <a href="#contact" class="btn btn-secondary">Contactar</a>
      </div>
    </div>
  </div>
</section>

<style>
  /* ===== ESTILOS PRINCIPALES DEL HERO ===== */
  .hero {
    min-height: 100vh;            /* Ocupa al menos toda la altura de la pantalla */
    display: flex;                /* Usa flexbox para centrar el contenido */
    align-items: center;          /* Centrado vertical */
    justify-content: center;      /* Centrado horizontal */
    padding: 6rem 0 4rem;         /* Espaciado vertical (arriba, abajo) */
    position: relative;           /* Contexto de posicionamiento */
  }

  /* Contenedor del contenido del hero */
  .hero-content {
    text-align: center;           /* Alineación del texto al centro */
    max-width: 800px;             /* Ancho máximo del contenido */
    margin: 0 auto;               /* Centrado horizontal */
    padding: 0 1.5rem;            /* Espaciado horizontal en móviles */
  }

  /* Estilo del título principal */
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4rem);  /* Tamaño de fuente responsivo */
    margin-bottom: 1rem;          /* Espaciado inferior */
    font-weight: 700;             /* Grosor de la fuente */
    line-height: 1.1;             /* Interlineado ajustado */
    color: var(--text-color);     /* Color del texto usando variable CSS */
  }

  /* Estilo del subtítulo */
  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.5rem);  /* Tamaño de fuente responsivo */
    color: var(--secondary-color); /* Color secundario del tema */
    margin-bottom: 1.5rem;        /* Espaciado inferior */
    font-weight: 400;             /* Grosor de la fuente normal */
  }

  /* Estilo de la descripción */
  .hero-description {
    font-size: 1.1rem;            /* Tamaño de fuente legible */
    color: var(--secondary-color); /* Color secundario */
    margin-bottom: 3rem;          /* Espaciado inferior amplio */
    max-width: 600px;             /* Ancho máximo para mejor legibilidad */
    margin-left: auto;            /* Centrado horizontal */
    margin-right: auto;           /* Centrado horizontal */
    line-height: 1.6;             /* Interlineado cómodo */
  }

  /* Contenedor de botones de acción */
  .hero-actions {
    display: flex;                /* Usa flexbox para los botones */
    gap: 1rem;                    /* Espacio entre botones */
    justify-content: center;      /* Centra los botones horizontalmente */
    flex-wrap: wrap;              /* Permite que los botones se envuelvan */
  }

  /* ===== ESTILOS DE BOTONES ===== */
  /* Estilo base para todos los botones */
  .btn {
    display: inline-block;        /* Permite aplicar márgenes y relleno */
    padding: 0.75rem 2rem;        /* Espaciado interno */
    border-radius: 0.375rem;      /* Bordes redondeados */
    font-weight: 500;             /* Grosor de la fuente */
    text-decoration: none;        /* Sin subrayado */
    transition: all 0.2s ease;    /* Transición suave para efectos hover */
    border: 1px solid transparent; /* Borde transparente por defecto */
    cursor: pointer;              /* Cursor tipo puntero */
  }

  /* Estilo del botón primario */
  .btn-primary {
    background-color: var(--accent-color);  /* Color de acento del tema */
    color: white;                 /* Texto blanco */
  }

  /* Efecto hover para el botón primario */
  .btn-primary:hover {
    background-color: #2563eb;    /* Color más oscuro al pasar el mouse */
    transform: translateY(-1px);  /* Efecto de elevación sutil */
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2); /* Sombra suave */
  }

  /* Estilo del botón secundario */
  .btn-secondary {
    border-color: var(--border-color); /* Color del borde */
    color: var(--text-color);     /* Color del texto */
    background-color: transparent; /* Fondo transparente */
  }

  /* Efecto hover para el botón secundario */
  .btn-secondary:hover {
    background-color: var(--background-color); /* Fondo al pasar el mouse */
    border-color: var(--text-color);          /* Color del borde al pasar el mouse */
    transform: translateY(-1px);              /* Efecto de elevación */
  }

  /* ===== DISEÑO RESPONSIVE ===== */
  /* Estilos para pantallas medianas (hasta 768px) */
  @media (max-width: 768px) {
    .hero {
      padding: 5rem 0 3rem;       /* Reduce el espaciado vertical */
    }

    .hero-title {
      font-size: 3rem;            /* Tamaño de fuente más pequeño */
    }

    .hero-description {
      font-size: 1rem;            /* Tamaño de fuente ligeramente más pequeño */
      padding: 0 1rem;            /* Añade espaciado horizontal */
    }

    .hero-actions {
      flex-direction: column;     /* Apila los botones verticalmente */
      gap: 0.75rem;               /* Reduce el espacio entre botones */
    }

    .btn {
      width: 100%;                /* Botones de ancho completo */
      max-width: 250px;           /* Ancho máximo para mejor apariencia */
      margin: 0 auto;             /* Centrado horizontal */
    }
  }

  /* Estilos para pantallas pequeñas (hasta 480px) */
  @media (max-width: 480px) {
    .hero {
      padding: 4rem 0 2rem;       /* Reduce aún más el espaciado */
    }

    .hero-title {
      font-size: 2.25rem;         /* Tamaño de fuente más pequeño */
    }

    .hero-subtitle {
      font-size: 1.1rem;          /* Tamaño de fuente más pequeño */
    }

    .hero-description {
      font-size: 0.95rem;         /* Tamaño de fuente ligeramente más pequeño */
      margin-bottom: 2rem;        /* Reduce el margen inferior */
    }

    .btn {
      padding: 0.65rem 1.5rem;    /* Ajusta el espaciado interno */
      font-size: 0.95rem;         /* Tamaño de fuente ligeramente más pequeño */
    }
  }
</style>
